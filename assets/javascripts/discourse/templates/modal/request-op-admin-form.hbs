<form class="request-op-admin-form">
  <DModalBody @title="topic_op_admin.apply_for_op_admin">
    <div class="control-group">
      <label>
        {{i18n "topic_op_admin.modal.tell_reason"}}
      </label>

      <Textarea @value={{this.reason}} min-height="400px" max-height="1000px" resize="both" />
    </div>
  </DModalBody>

  <div class="modal-footer">
    <DButton @class="btn-primary" @label="groups.membership_request.submit" @action={{action model.submit}} />

    <DModalCancel @close={{route-action "closeModal"}} />
    <ConditionalLoadingSpinner @size="small" @condition={{this.loading}} />
  </div>
</form>