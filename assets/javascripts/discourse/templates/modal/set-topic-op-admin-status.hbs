<DModalBody @title= "topic_op_admin.modal.title">
  <div class="set-topic-op-admin-status-modal-body">
    <h3>
      话题: {{model.topic.title}}
    </h3>
    <div class="control-group topic-op-admin-status">
      <label>
        {{input
          id="topic-close-enable"
          type="checkbox"
          checked=this.model.enables.close
        }}
        <span>{{i18n "topic_op_admin.modal.enable_close"}}</span>
      </label>
      <label>
        {{input
          id="topic-visible-enable"
          type="checkbox"
          checked=this.model.enables.visible
        }}
        <span>{{i18n "topic_op_admin.modal.enable_visible"}}</span>
      </label>
      <label>
        {{input
          id="topic-slow-mode-enable"
          type="checkbox"
          checked=this.model.enables.slow_mode
        }}
        <span>{{i18n "topic_op_admin.modal.enable_slow_mode"}}</span>
      </label>
    </div>
  </div>
</DModalBody>
<div class="modal-footer">
  {{d-button
    label="ok_value"
    icon=inviteIcon
    action=(action model.action.submit)
    class="btn-primary"
    disabled=disabled
  }}
  <DModalCancel @close={{route-action "closeModal"}} />
</div>
